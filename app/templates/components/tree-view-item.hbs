<div class="flex-row inline-space-between item-row" 
  {{action "select" data}}>
  <div class="item-name" >
    {{data.name}}
  </div>
  <div class="flex-row inline-space-between item-controls">
    <div>
      {{link-to "" "tasks.task.edit" data 
        class="icon icon-edit-modify-streamline" bubbles=false}}
      <a {{action "add" data bubbles=false}} 
        class="icon icon-plus"></a>
    </div>
    <div>
      <a {{action "expand" bubbles=false}} class={{expandClass}}></a>
    </div>
  </div>
</div>
<div class="flex-row">
  <ul>
    {{#if showChildren}}
      {{#each data.children as |child|}} 
        {{#if (or showAll (eq child.status "active"))}}
          {{tree-view-item 
            showAll=showAll
            data=child select=select add=add}}
        {{/if}}
      {{/each}}
    {{/if}}
  </ul>
</div>
