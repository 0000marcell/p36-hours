<div class="flex-row inline-space-around clock-face">
  <h3>36:00</h3>
  <h2>6:00</h2>
  <h1>{{_internalTime}}</h1>
</div>
{{#if (eq state 'stopped')}}
  {{#default-button onClick=(action "startClock")}}
    START
  {{/default-button}}
{{else if (eq state 'paused')}}
  {{#default-button onClick=(action "resumeClock")}}
    RESUME
  {{/default-button}}
  {{#default-button onClick=(action "resetClock")}}
    RESET
  {{/default-button}}
{{else}}
  {{#default-button onClick=(action "pauseClock")}}
    PAUSE
  {{/default-button}}
  {{#default-button onClick=(action "resetClock")}}
    RESET
  {{/default-button}}
{{/if}}
